#!/bin/bash
# Pre-commit hook with parallel execution for speed
# Install: ./scripts/install-hooks.sh
# Or manually: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# If running from .git/hooks, find the project root differently
if [[ "$SCRIPT_DIR" == *".git/hooks"* ]]; then
    PROJECT_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"
else
    PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
fi

cd "$PROJECT_ROOT"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

# Temp files for capturing output
FMT_LOG=$(mktemp)
CLIPPY_LOG=$(mktemp)
TS_AGENTPDF_LOG=$(mktemp)
TS_PDFJOIN_LOG=$(mktemp)
TEST_LOG=$(mktemp)
PARITY_LOG=$(mktemp)

cleanup() {
    rm -f "$FMT_LOG" "$CLIPPY_LOG" "$TS_AGENTPDF_LOG" "$TS_PDFJOIN_LOG" "$TEST_LOG" "$PARITY_LOG"
}
trap cleanup EXIT

echo -e "${YELLOW}üîç Running pre-commit checks (parallel)...${NC}"

# ============================================================================
# PHASE 1: Lint checks (run in parallel)
# ============================================================================
echo -e "\n${CYAN}Phase 1: Linting (parallel)${NC}"

# Start all lint checks in parallel
(
    cargo fmt --all -- --check > "$FMT_LOG" 2>&1
) &
FMT_PID=$!

(
    cargo clippy --all-targets --all-features -- -D warnings > "$CLIPPY_LOG" 2>&1
) &
CLIPPY_PID=$!

# TypeScript checks (only if package.json exists and has typecheck script)
TS_AGENTPDF_PID=""
TS_PDFJOIN_PID=""

if [[ -f "$PROJECT_ROOT/apps/agentpdf-web/package.json" ]]; then
    (
        cd "$PROJECT_ROOT/apps/agentpdf-web"
        npm run typecheck > "$TS_AGENTPDF_LOG" 2>&1
    ) &
    TS_AGENTPDF_PID=$!
fi

if [[ -f "$PROJECT_ROOT/apps/pdfjoin-web/package.json" ]]; then
    (
        cd "$PROJECT_ROOT/apps/pdfjoin-web"
        npm run typecheck > "$TS_PDFJOIN_LOG" 2>&1
    ) &
    TS_PDFJOIN_PID=$!
fi

# Wait for all lint checks and collect results
LINT_FAILED=0

echo -n "  cargo fmt..."
if wait $FMT_PID; then
    echo -e " ${GREEN}‚úì${NC}"
else
    echo -e " ${RED}‚úó${NC}"
    LINT_FAILED=1
fi

echo -n "  cargo clippy..."
if wait $CLIPPY_PID; then
    echo -e " ${GREEN}‚úì${NC}"
else
    echo -e " ${RED}‚úó${NC}"
    LINT_FAILED=1
fi

if [[ -n "$TS_AGENTPDF_PID" ]]; then
    echo -n "  tsc agentpdf..."
    if wait $TS_AGENTPDF_PID; then
        echo -e " ${GREEN}‚úì${NC}"
    else
        echo -e " ${RED}‚úó${NC}"
        LINT_FAILED=1
    fi
fi

if [[ -n "$TS_PDFJOIN_PID" ]]; then
    echo -n "  tsc pdfjoin..."
    if wait $TS_PDFJOIN_PID; then
        echo -e " ${GREEN}‚úì${NC}"
    else
        echo -e " ${RED}‚úó${NC}"
        LINT_FAILED=1
    fi
fi

# If any lint check failed, show errors and exit
if [[ $LINT_FAILED -ne 0 ]]; then
    echo -e "\n${RED}‚ùå Lint checks failed:${NC}"

    if [[ -s "$FMT_LOG" ]] && ! grep -q "^$" "$FMT_LOG" 2>/dev/null; then
        if ! cargo fmt --all -- --check > /dev/null 2>&1; then
            echo -e "\n${YELLOW}=== cargo fmt ===${NC}"
            cat "$FMT_LOG"
            echo -e "${CYAN}Run 'cargo fmt --all' to fix${NC}"
        fi
    fi

    if ! cargo clippy --all-targets --all-features -- -D warnings > /dev/null 2>&1; then
        echo -e "\n${YELLOW}=== cargo clippy ===${NC}"
        cat "$CLIPPY_LOG"
    fi

    if [[ -n "$TS_AGENTPDF_PID" ]] && [[ -s "$TS_AGENTPDF_LOG" ]]; then
        if ! (cd "$PROJECT_ROOT/apps/agentpdf-web" && npm run typecheck > /dev/null 2>&1); then
            echo -e "\n${YELLOW}=== tsc agentpdf-web ===${NC}"
            cat "$TS_AGENTPDF_LOG"
        fi
    fi

    if [[ -n "$TS_PDFJOIN_PID" ]] && [[ -s "$TS_PDFJOIN_LOG" ]]; then
        if ! (cd "$PROJECT_ROOT/apps/pdfjoin-web" && npm run typecheck > /dev/null 2>&1); then
            echo -e "\n${YELLOW}=== tsc pdfjoin-web ===${NC}"
            cat "$TS_PDFJOIN_LOG"
        fi
    fi

    exit 1
fi

# ============================================================================
# PHASE 2: Tests (run in parallel where possible)
# ============================================================================
echo -e "\n${CYAN}Phase 2: Tests (parallel)${NC}"

# Use nextest if available for better parallelism
if command -v cargo-nextest &> /dev/null; then
    TEST_CMD="cargo nextest run"
    NEXTEST_AVAILABLE=1
else
    TEST_CMD="cargo test"
    NEXTEST_AVAILABLE=0
fi

# Run unit tests (excluding browser tests - they require trunk servers and are slow)
(
    if [[ $NEXTEST_AVAILABLE -eq 1 ]]; then
        $TEST_CMD --all-features --workspace -E 'not binary(browser_pdfjoin) and not binary(browser_agentpdf) and not binary(browser_docsign) and not binary(browser_core)' > "$TEST_LOG" 2>&1
    else
        # Without nextest, exclude benchmark-harness entirely and run its non-browser tests separately
        cargo test --all-features --workspace --exclude benchmark-harness > "$TEST_LOG" 2>&1
    fi
) &
TEST_PID=$!

(
    # Run parity tests separately
    $TEST_CMD -p benchmark-harness --test parity_tests > "$PARITY_LOG" 2>&1
) &
PARITY_PID=$!

TEST_FAILED=0

echo -n "  unit tests..."
if wait $TEST_PID; then
    echo -e " ${GREEN}‚úì${NC}"
else
    echo -e " ${RED}‚úó${NC}"
    TEST_FAILED=1
fi

echo -n "  parity tests..."
if wait $PARITY_PID; then
    echo -e " ${GREEN}‚úì${NC}"
else
    echo -e " ${RED}‚úó${NC}"
    TEST_FAILED=1
fi

if [[ $TEST_FAILED -ne 0 ]]; then
    echo -e "\n${RED}‚ùå Tests failed:${NC}"

    if [[ -s "$TEST_LOG" ]]; then
        echo -e "\n${YELLOW}=== unit tests ===${NC}"
        cat "$TEST_LOG"
    fi

    if [[ -s "$PARITY_LOG" ]]; then
        echo -e "\n${YELLOW}=== parity tests ===${NC}"
        cat "$PARITY_LOG"
    fi

    exit 1
fi

# Browser tests (requires trunk servers) - DISABLED by default, too slow/flaky for pre-commit
# Run manually with: ./scripts/test-browser.sh
# Or enable with: ENABLE_BROWSER_TESTS=1 git commit ...
if [ -n "$ENABLE_BROWSER_TESTS" ]; then
    echo -e "\n${CYAN}Phase 3: Browser tests${NC}"
    if ! "$PROJECT_ROOT/scripts/test-browser.sh"; then
        echo -e "${RED}‚ùå Browser tests failed.${NC}"
        exit 1
    fi
else
    echo -e "\n${CYAN}Phase 3: Browser tests${NC} ${YELLOW}(skipped - run ./scripts/test-browser.sh manually)${NC}"
fi

echo -e "\n${GREEN}‚úÖ All pre-commit checks passed!${NC}"
